package day0811;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class B1541 {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		String str = s.nextLine();
//		int plus = str.indexOf("+");
//		int minus = str.indexOf("-");
//		List<Integer> minusList = new ArrayList<Integer>();
//		for(int i=0; i<str.length(); i++) {
//			if(str.charAt(i)=='-')
//				minusList.add(i);
//		}
//		System.out.println("minusList>"+minusList);
//		List<String> list = new ArrayList<>();
//		for (int i=0; i<str.length(); i++) {
//			if(str.charAt(i)=='-'||str.charAt(i)=='+')
//				str.split(str, i);
//		}
		
		StringBuffer sb = new StringBuffer();
		sb.append(str);
		List<Integer> minusList = new ArrayList<Integer>();
		boolean swc = false;
		for(int i=0; i<sb.length(); i++) {
			if(sb.charAt(i)=='-') {
				minusList.add(i);
				swc = !swc;
			}
			if(sb.charAt(i)=='+'&&swc==true) {
				sb.setCharAt(i, '-');
			}
		}
		System.out.println("sb>>" + sb);
		String[] numList = new String[minusList.size()+1];
		for(int i=0; i<sb.length(); i++) {
			if(sb.charAt(i)=='+') {
				sb.setCharAt(i, '-');
			}
		}
		numList = str.split("\\+|-");
		System.out.println("sbList>>" + numList);
		
		sb.insert(minusList.get(0)+1, "(");
		if(minusList.size()==2)
			sb.insert(minusList.get(1)+1,")");
		else
			sb.insert(sb.length(), ")");
        
        
        System.out.println(sb);
		
	}

}
